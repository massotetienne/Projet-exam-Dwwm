<!-- Modal -->

<div class="modal fade" id="modalStatic" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content bg-black">
      <div class="modal-header bg-gold black">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close " data-dismiss="modal" aria-label="Close">
          <span class="honey" aria-hidden="false">&times;</span>
        </button>
      </div>

      <form action="/articles/post" method="post" enctype="multipart/form-data">
        <div class="field">
          <label class="label">Titre de l'article</label>
          <p>{{ _id }}</p>
          <div class="control">
            <input class="input" type="text" name="title">
          </div>
        </div>



        <div class="field">
          <label class="label">Contenu</label>
          <div class="control">
            <textarea class="textarea" name="content" id="content{{_id}}"></textarea>
          </div>
        </div>

        {{!-- Editor --}}
        <script>
          CKEDITOR.replace('content{{_id}}', {
            entities: false
          })
        
        </script>

        <div class="field">
          <label class="label">auteur</label>
          <div class="control">
            <input class="input" type="text" name="author">
          </div>
        </div>

        {{!-- image selecteur --}}
        <div class="file">
          <label class="file-label">
            <input class="file-input" type="file" name="image">
            <span class="file-cta">
              <span class="file-icon">
                <i class="fas fa-upload"></i>
              </span>
              <span class="file-label">
                Choisir une image
              </span>
            </span>
          </label>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <button class="button is-link"> Enregistrer</button>
          </div>
        </div>

      </form>
    </div>
  </div>
</div>   



