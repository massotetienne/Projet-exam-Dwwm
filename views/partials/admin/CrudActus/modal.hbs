<!-- Modal -->
<div class="modal fade " id="modal{{_id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content bg-black">
      <div class="modal-header bg-gold black">
        <h5 class="modal-title" id="exampleModalLabel">Gestion Articles</h5>
        <button type="button" class="close " data-dismiss="modal" aria-label="Close">
          <span class="honey" aria-hidden="false">&times;</span>
        </button>
      </div>

      <form action="/articles/update/{{_id}}" method="post" enctype="multipart/form-data">
        <div class="field">
          <label class="label">Titre : {{title}}</label>
          <p></p>
          <div class="control">
            <input class="input" type="text" name="title">
          </div>
        </div>



        <div class="field">
          <label class="label">Contenu : {{ content }}</label>
          <div class="control">
            <textarea class="textarea" name="content" id="content{{_id}}"></textarea>
          </div>
        </div>

        {{!-- Editor --}}
        <script>
          CKEDITOR.replace('content{{_id}}', {
            entities: false
          })
          
        </script>

        <div class="field">
          <label class="label">Auteur : {{author}}</label>
          <div class="control">
            <input class="input" type="text" name="author">
          </div>
        </div>

        {{!-- image selecteur --}}
        <div class="file">
          <label class="file-label">
            <img style="width:150px;height:150px" src="{{image}}" alt="">
            <input class="file-input" type="file" name="image">
            <span class="file-cta">
              <span class="file-icon">
                <i class="fas fa-upload"></i>
              </span>
              <span class="file-label">
                Choisir une image
              </span>
            </span>
          </label>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <button class="button is-link"> Enregistrer</button>
          </div>
        </div>

      </form>
      {{!-- boutton de suppresion relier au controler Articledelete --}}
      <form action="/articles/delete/{{_id}}" method="get" enctype="multipart/form-data">
        <div class="control">
          <button type="submit" class="button is text">Supprimer</button>
        </div>
      </form>
      <div class="modal-footer bg-gold">
        <button type="button" class="btn bg-black honey" data-dismiss="modal">Close</button>
        {{!-- <button type="button" class="btn bg-honey">Save changes</button> --}}
      </div>

    </div>
  </div>
</div>



