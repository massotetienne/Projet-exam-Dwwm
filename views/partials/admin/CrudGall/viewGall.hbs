<div class="modal fade " id="viewGall{{_id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-black">
            <div class="modal-header bg-gold black">
                <h5 class="modal-title" id="exampleModalLabel">Gestion Articles</h5>
                <button type="button" class="close " data-dismiss="modal" aria-label="Close">
                    <span class="honey" aria-hidden="false">&times;</span>
                </button>
            </div>

            <div>
                <h3 class="bg-black mb-0 p-2 text-center">{{title}}</h3>
                <img class="img-full img-actus p-3 bg-black" src="{{image}}" alt="">
                <h3 class="text-center bg-black mb-0">+Détails+</h3>
                <p class="text-center bg-black mb-0">{{ limitCharacter (stripTags content) 15}}</p>
                <p class="text-center bg-black mb-0">Cliquez sur +détails+ pour plus d'infos</p>

                <div class="container bg-black text-right">
                    <p class="text-left">Publié par : {{ author }} </p>
                    <p>Date {{dateCreateDB}}</p>
                </div>
            </div>


            <div class="modal-footer bg-gold">
                <button type="button" class="btn bg-black honey" data-dismiss="modal">Close</button>
                {{!-- <button type="button" class="btn bg-honey">Save changes</button> --}}
            </div>
        </div>
    </div>
</div>