<div class="modal fade" id="modalDelete{{_id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">

  <!-- Change class .modal-sm to change the size of the modal -->
  <div class="modal-dialog modal-sm" role="document">


    <div class="modal-content">
      <div class="modal-header bg-gold">
        <h4 class="modal-title w-100 black" id="myModalLabel">Supprimer</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body bg-black honey">
        Voulez vous vraiment supprimer ?
      </div>
      
      <form action="/message/delete/{{_id}}" method="get">
        <div class="modal-footer bg-gold">
          <button type="submit" class="btn bg-black honey btn-sm">YES</button>
          <button type="submit" class="btn bg-black honey btn-sm" data-dismiss="modal">NO</button>
        </div>
      </form>

    </div>
  </div>
</div>
<!-- Central Modal Small -->