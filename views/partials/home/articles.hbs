<!-- articles -->
<div class="container bg-black">
    <h2 class="w-100 text-center  p-2 my-2 ft-45">
        Mes dernières actus</h2>
</div>


<div class="container ">
    <div class="row ">
        {{#each (last actus 3) }}
        <div class="mx-auto card bg-black border  pt-3 col-lg-4 col-md-6 col-sm-12">
            <img src="{{image}}" class="card-img-top img-std" alt="Placeholder image">
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="card-text">{{ limitChar (stripTags content) 50}}</p>
                {{!===============>-- stripTags sur devant title , content et author ! <===================--}}
            </div>
            <div class="card-footer">
                <p>Publié par {{author}} </p>
                <p class="text-right">Le : {{dateCreateDB}}</p>
                {{!-- <small class="text-muted">Last updated 3 mins ago</small> --}}
            </div>
        </div>
        {{/each }}
    </div>
</div>
