<!-- tableau tarifs -->
<div class="container bg-black mt-15vh p-2  text-center">
    <h2 class="ft-45">Tarifs</h2>
</div>

<div class="container bg-black mt-3 p-2 ft-25 text-center gold">
    <p class="ft-20"><i class="fas fa-exclamation-triangle pr-3"></i>Les tarifs sont à titre indicatif chaque
        oeuvre étant unique .
        Merci de me contacter pour l'étude de votre projet<i class="fas fa-exclamation-triangle pl-3"></i></p>
</div>

<table class="table table-bordered table-dark mt-3 bg-black container">
    <thead>
        <tr class="gold ft-20">
            <th scope="col">#</th>
            <th scope="col">Taille</th>
            <th scope="col">Noir</th>
            <th scope="col">Couleur</th>
        </tr>
    </thead>
    <tbody>
        <tr class="gold">
            <th scope="row">Le discret</th>
            <td>Petit</td>
            <td>80-120€</td>
            <td>100-150€</td>
        </tr>
        <tr class="gold">
            <th scope="row">Le rebelle</th>
            <td>Moyen</td>
            <td>120-250€</td>
            <td>150-220€</td>
        </tr>
        <tr class="gold">
            <th scope="row">Le furious</th>
            <td>Grand</td>
            <td>250€-900€</td>
            <td>320-990€</td>
        </tr>
    </tbody>
</table>
</div>
<!-- tableau tarifs fin -->

