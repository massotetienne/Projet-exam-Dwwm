<!-- croquis photo -->
<div class="container bg-black p-2 text-center">
    <h2 class="ft-45">Mes Croquis recents</h2>
</div>
<div class="container-fluid ">
    <div class="row">
        {{#each croquis}}
        <div class="col-md-6 col-sm-12">
            <img class=" img-actus mt-3 bg-black p-3" src="{{image}}" alt="">
            <p class="text-center bg-black m-0">Publié par : {{author}}</p>
            <p class="text-center bg-black">Le : {{dateCreateDB}}</p>
        </div>
        {{/each}}
    </div>
</div>

