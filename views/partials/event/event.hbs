<div>
    <h3 class="container bg-black ft-45 p-2 mt-3  text-center">Events</h3>
</div>

<div class="container p-2">
    <div class="row">
        {{#each event}}
        <div class="card col-lg-4 col-md-6 col-sm-12 bg-black p-3  mx-auto border">
            <img src="{{image}}" class="card-img-top img-std" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="card-text">{{content}}</p>
            </div>
            <div class="card-footer d-flex justify-content-around">
                <small class="text-muted text-left"> Publi√© par : {{author}} </small>
                <small class="text-muted text-right"> Le : {{dateCreateDB}} </small>
            </div>
            <div>
                <p class="d-flex justify-content-around">Plus d'info <a href="{{ link }}" target='_blank' class="btn bg-gold">Cliquez
                        ici</a></p>
            </div>
        </div>
        {{/each}}
