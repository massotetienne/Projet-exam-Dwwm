<!-- login -->
<div class="container bg-black mb-3">
    <h2 class=" mt-15vh text-center p-2 ft-45">
        Connectez-vous</h2>
</div>

<div class="container ">
    <section id="content" class="page-content card card-block container mb-3 bg-black ">

        <section class="login-form">
            <div>
                <p class="text-center ft-20">Hey , bienvenue ! </p>
            </div>
            {{!-- !!!! ici le chemin ou le formulaire doit etre traiter --}}
            <form id="login-form" action="/user/LoginPost" method="post">
                <section>
                    <input type="hidden" name="back" value="my-account">
                    <div class="form-group row ">
                        <label class="col-md-3 form-control-label required">
                            E-mail
                        </label>
                        <div class="col-md-6">
                            <input class="form-control" name="email" type="email" value={{email}}>
                        </div>
                        <div class="col-md-3 form-control-comment">
                        </div>
                    </div>
                    <div class="form-group row ">
                        <label class="col-md-3 form-control-label required">
                            Mot de passe
                        </label>
                        <div class="col-md-6">
                            <div class="input-group js-parent-focus">
                                <input class="form-control" name="password" type="password" value={{password}}>

                            </div>
                        </div>
                        <div class="col-md-3 form-control-comment">
                        </div>
                    </div>
                    <div class="forgot-password text-right">
                        <a class="honey" data-toggle="modal" data-target="#mdp-oublier" href="#mdp-oublier"
                            rel="nofollow">
                            Mot de passe oublié ?
                        </a>
                    </div>
                </section>
                <footer class="form-footer text-sm-center clearfix">
                    <input type="hidden" name="submitLogin" value="1">
                    <button class="btn bg-gold black mb-3 p-2 pl-5 pr-5 " data-link-action="sign-in" type="submit">
                        Connexion
                    </button>
                </footer>
            </form>
            {{#if sess }}
            <form action="/user/Logout" method="get">
                <button class="btn bg-gold black mb-3 p-2 pl-5 pr-5 " type="submit">
                    Deconnextion
                </button>
            </form>
            
            {{!-- mail de verif --}}
            {{!-- =========================================== --}}
            <form action="/verification" method="post">
                <input type="hidden" name="email" value="{{ sess.email }}" />
                <button class="btn bg-gold black mb-3 p-2 pl-5 pr-5 " type="submit">
                    Verif E-mail
                </button>
            </form>
            {{!-- =========================================== --}}
            {{!-- mail de verif --}}
            {{/if}}
        </section>
        <hr>
        <div class="no-account mb-3">
            <a class="honey" href="#inscription" data-link-action="display-register-form">
                Pas de compte ? Créez-en un
            </a>
        </div>
        <div class=" text-left">
            <ul class="ft-35">
                <li class="d-flex justify-content-around">
                    <h2 class="ft-25">Connectez-vous avec :</h2>
                    <a href="https://twitter.com/?lang=fr"><i class="fab fa-twitter"></i></a>
                    <a href="https://www.facebook.com"><i class="fab fa-facebook-square"></i></a>
                    <a href="https://accounts.google.com/ServiceLogin"><i class="fab fa-google"></i></a>
                    <a href="https://www.instagram.com/"><i class="fab fa-instagram"></i></a>
                </li>
            </ul>
        </div>

    </section>
</div>
<!-- login -->

<!-- ================================================================================================= -->

<!-- modal mdp oublier -->

<div class="modal fade " id="mdp-oublier" tabindex="-1" aria-labelledby="mdp-oublier" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-black">
            <div class="modal-header bg-gold black">

                <h5 class="modal-title" id="mdp-oublier">Mots de passe oublier ?</h5>
                <button type="button" class="close " data-dismiss="modal" aria-label="Close">
                    <span class="honey" aria-hidden="false">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form action="/lostpassword" method="POST">
                    <div class="input-group mb-3">
                        <input type="text" name="email" class="form-control" placeholder="Your E-mail"
                            aria-label="Recipient's username" aria-describedby="button-addon2">
                        <div class="input-group-append">
                            <button class="btn bg-gold" type="submit" id="button-addon2">Envoyer</button>
                        </div>
                    </div>
                </form>
                <div class="modal-footer bg-gold"></div>


            </div>
        </div>
    </div>
</div>


<!-- modal mdp fin -->
<!-- ================================================================================================= -->
{{#if success }}
<script>
    $(document).ready(function () {
        $("#enregister").modal('show');
    });
</script>
<div class="modal fade" id="enregister" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-notify modal-success" role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header bg-gold ">
                <p class="heading lead black ft-35 ">Bienvenue</p>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="white-text">&times;</span>
                </button>
            </div>

            <!--Body-->
            <div class="modal-body">
                <div class="text-center">
                    <i class="fas fa-check fa-4x mb-3 animated rotateIn lawn"></i>
                    <p class="black">{{ success }}</p>
                </div>
            </div>

            <!--Footer-->
            <div class="modal-footer justify-content-center bg-gold"></div>


        </div>
        <!--/.Content-->
    </div>
</div>

{{/if }}

{{#if errorLogin }}
<script>
    $(document).ready(function () {
        $("#loginFail").modal('show');
    });
</script>
<div class="modal fade" id="loginFail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-notify modal-warning" role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header bg-gold ">
                <p class="heading lead black ft-35 ">Bienvenue</p>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="white-text">&times;</span>
                </button>
            </div>

            <!--Body-->
            <div class="modal-body">
                <div class="text-center">
                    {{!-- <i class="fas fa-check fa-4x mb-3 animated rotateIn lawn"></i> --}}
                    <i class="fas fa-times mb-3 animated rotateIn ft-45 red"></i>

                    <p class="black">{{ errorLogin }}</p>
                </div>
            </div>

            <!--Footer-->
            <div class="modal-footer justify-content-center bg-gold"></div>


        </div>
        <!--/.Content-->
    </div>
</div>

{{/if }}